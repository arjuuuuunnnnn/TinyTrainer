{
  "model_name": "TinyLlama/TinyLlama-1.1B-Chat-v1.0",
  "dataset_path": "dataset/sft_data/sft_data.jsonl",
  "output_dir": "tinyllama-sft-checkpoint",
  "train_batch_size": 4,
  "gradient_accumulation_steps": 4,
  "num_train_epochs": 3,
  "logging_steps": 20,
